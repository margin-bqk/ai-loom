[flake8]
# 继承 black 的配置
max-line-length = 100
extend-ignore = E203, W503, E501, E712, F541, F403, F401, W291, W293, E722, F402, F811, F841, E402, D100, D101, D102, D103, D104, D105, D106, D107, D200, D201, D202, D203, D204, D205, D206, D207, D208, D209, D210, D211, D212, D213, D214, D215, D300, D301, D400, D401, D402, D403, D404, D405, D406, D407, D408, D409, D410, D411, D412, D413, D414, D415, D416, D417
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    .mypy_cache,
    .pytest_cache,
    build,
    dist,
    *.egg-info,
    docs/_build,
    migrations

# 启用插件
per-file-ignores =
    __init__.py: F401
    tests/*: S101

# 文档字符串检查 - 禁用严格检查
# docstring-convention = google

# 导入检查
import-order-style = black

# 复杂度检查
max-complexity = 30

# 统计信息
statistics = True

# 输出格式
format = default
